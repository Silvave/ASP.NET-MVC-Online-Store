@model Shop.Web.ViewModels.ProductViewModel

@using Shop.Web.Controllers
@{
    ProductController productCtrl = new ProductController();
}

@foreach (var product in ProductController.productList)
        {
    <article class="product-container">
        <a href="#">
            <h3 class="product-title">@Html.ActionLink(@product.Title, "Post", "Product")</h3>
        </a>
        <div class="post-body">
            @product.Price
            @Html.Raw(product.ShortDescription)
            @Html.ActionLink("Read more...", "Post", "Product")
        </div>
        <div class="date">
            <span class="created-on">@product.CreatedOn</span>
        </div>

    </article>
}

